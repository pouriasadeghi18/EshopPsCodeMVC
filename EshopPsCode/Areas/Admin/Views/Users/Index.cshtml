@model IEnumerable<DataLayer.Users>

@{
    ViewBag.Title = "مدیریت کاربر ها";
}

<h2>مدیریت کاربر ها</h2>
<hr />


<p>
    <a href="@Url.Action("Create", "Users", new { @area = "Admin"})" class="btn btn-primary mt-2">ایجاد کاربر جدید</a>
</p>
<table class="table table-bordered ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role.RoleTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.RoleTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @item.RegisterDate.ToShamsi()
            </td>

            <td>
                <a href="@Url.Action("Delete","Users",new { id=item.UserID })"><i class="far fa-trash-alt fa-2x"></i></a>
                <a href="@Url.Action("Edit","Users",new { id=item.UserID })"><i class="far fa-edit fa-2x"></i></a>

            </td>
        </tr>
    }

</table>
